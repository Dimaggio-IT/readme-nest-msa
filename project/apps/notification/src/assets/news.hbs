<h2>Привет, {{user}}</h2>
<p>Новые публикации для Вас.</p>

<ul>
  {{#each posts}}
  <li>
    <p>Тип публикации: {{type}}</p>
    <p>Автор публикации: {{userId}}</p>
    <p>Дата публикации: {{createdAt}}</p>

    {{#if title}}
      <p>Название: {{title}}</p>
    {{/if}}

    {{#if description}}
      <p>Описание: {{description}}</p>
    {{/if}}

    {{#if excerpt}}
      <p>Анонс публикации: {{excerpt}}</p>
    {{/if}}

    {{#if link}}
      <p>Ссылка: {{link}}</p>
    {{/if}}

    {{#if quoteAuthor}}
      <p>Автор цитаты: {{quoteAuthor}}</p>
    {{/if}}

  {{/each}}
</ul>
